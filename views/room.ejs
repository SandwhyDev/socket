<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
      const user = "<%= user %>";
      const token = "<%= token %>";
      const post_logout = "<%= post_logout %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="hidden">
        <h3>Logout</h3>
      </div>

      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Video Chat</h3>
      </div>

      <a
        href="http://localhost:9000/oidc/session/end?id_token_hint=<%= token %>&post_logout_redirect_uri=<%= post_logout %>"
      >
        <img src="../log-out.png" class="keluar" alt="" width="40" height="40"
      /></a>
    </div>
    <div class="main">
      <div class="main__left">
        <div class="videos__group">
          <div id="video-grid" class="video"></div>
        </div>
        <div class="options">
          <div class="options__left">
            <div id="stopVideo" class="options__button">
              <i class="fa fa-video-camera"></i>
            </div>
            <div id="muteButton" class="options__button">
              <i class="fa fa-microphone"></i>
            </div>
            <div id="showChat" class="options__button">
              <i class="fa fa-comment"></i>
            </div>
          </div>
          <div class="options__right">
            <div id="inviteButton" class="options__button">
              <i class="fas fa-user-plus"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__chat_window">
          <div class="messages"></div>
        </div>
        <div class="main__message_container">
          <div id="image-container"></div>

          <input
            id="chat_message"
            type="text"
            autocomplete="off"
            placeholder="Type message here..."
          />
          <div id="send" class="options__button">
            <i class="fa fa-play" aria-hidden="true"></i>
          </div>

          <div id="send" class="options__button">
            <input
              id="photo"
              name="photo"
              class="custom-file-input"
              type="file"
            />

            <!-- <i class="fa fa-plus" aria-hidden="true"> </i> -->
          </div>
        </div>
      </div>
    </div>
  </body>

  <script src="script.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

  <script type="text/javascript">
    const fileInput = $("#photo");
    const imageContainer = $("#image-container");
    fileInput.on("change", () => {
      const file = fileInput[0].files[0];
      let filename = URL.createObjectURL(file);

      const reader = new FileReader();
      reader.readAsArrayBuffer(file);

      reader.onload = () => {
        const image = $("<img>").attr("src", `${filename}`);
        console.log("image", image);

        imageContainer.html(image);
      };
    });
  </script>
</html>
