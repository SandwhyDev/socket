generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Room{
  id        Int      @id @default(autoincrement())
  room_id   String    @unique
  category String
  createdAt DateTime  @default(now())


  chat           Chat[]
  photoChat      photoChat[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  user      String?
  message   String?
  room_id   String?
  createdAt DateTime  @default(now())

  room      Room?      @relation(fields: [room_id], references: [room_id], onDelete: Cascade)
}

model photoChat {
  id        Int      @id @default(autoincrement())
  filename  String?
  mimetype  String?
  size      Int?
  room_id   String    @unique
  createdAt DateTime @default(now())
  updatedAt DateTime

  room      Room?      @relation(fields: [room_id], references: [room_id], onDelete: Cascade)
}
